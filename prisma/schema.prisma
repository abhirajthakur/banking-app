generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String @id @default(cuid())
  dwollaCustomerUrl String
  dwollaCustomerId  String
  firstName         String
  lastName          String
  address1          String
  city              String
  state             String
  aadhar            String
  postalCode        String
  dateOfBirth       String
  email             String @unique
  password          String
  Bank              Bank[]
}

model Bank {
  id               String @id @default(cuid())
  accountId        String
  accessToken      String
  fundingSourceUrl String
  shareableId      String
  userId           String
  user             User   @relation(fields: [userId], references: [id])
}
