generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  dwollaCustomerUrl String
  dwollaCustomerId  String
  firstName         String
  lastName          String
  address1          String
  city              String
  state             String
  aadhar            String
  postalCode        String
  dateOfBirth       String
  email             String    @unique
  password          String
  sessions          Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
